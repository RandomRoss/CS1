#include <iostream>
#include <cmath>
using namespace std;

int main() {
    
    float numenter1 = 0; 
    float sum1 = 0;
    int i = 1;
   do{
       cout << "Enter Positive Number to Add or Enter Zero or Negative Number to End:"; 
       cin >> numenter1;
       cout << endl;
      if (numenter1 > 0){
          sum1 = numenter1 + sum1; 
      }
      
   else if (numenter1 < 0){
       i = i - 1;
   }
   else {
       i = i - 1; 
      }
   }while(i == 1);
   
   cout <<"Sum of Entered Numbers:" << sum1 << endl;
   
   return 0;
}
